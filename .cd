#!/bin/bash
title "stubborn"
debug "website generator"
help .cd | indent

function stub() {
  . scripts/stub.sh
}

function visit() {
  if [ -z "$1" ]; then
    err "usage: visit <project-dir>"; return
  fi
  open $1/build/index.html
}

function run() {
  stub "models/$1/site.stub" $1
  visit $1
}

function rerun() {
  rm -rf $1
  stub "models/$1/site.stub" $1
  visit $1
}

function test() {
  stub models/orbb/site.stub test
  rm -rf example
  cp -r test/build example
}

function retest() {
  rm -rf test
  test
}

function listen() {
  file="models/$1/site.stub"
  if [ -z "$1" ]; then
    err "usage: listen <model-name>"; return
  elif [ ! -f "$file" ]; then
    err "stub file not found: $file"; return
  fi
  loop ./scripts/stub.sh "$file" "$file" "$1"
}


function relisten() {
  file="models/$1/site.stub"
  if [ -z "$1" ]; then
    err "usage: listen <model-name>"; return
  elif [ ! -f "$file" ]; then
    err "stub file not found: $file"; return
  fi
  loop ./scripts/restub.sh "$file" "$file" "$1"
}

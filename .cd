#!/bin/bash
title "stubborn"
debug "website generator"
help .cd | indent

function stub() {
  . scripts/stub.sh
}

function listen() {
  file="models/$1/site.stub"
  if [ -z "$1" ]; then
    err "usage: listen <model-name>"; return
  elif [ ! -f "$file" ]; then
    err "stub file not found: $file"; return
  fi
  watch --color -n 1 "echo $(source ~/.zshrc; zsh ./scripts/stub.sh model/$1/site.stub test)"
}

function test() {
  stub model/orbb/site.stub test
}

function retest() {
  rm -rf test
  stub model/orbb/site.stub test
}

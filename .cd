#!/bin/bash
title "Orlando Babysitters"
debug "aka. Passive Income"
help .cd | indent

function frontend() {
  cc frontend
}

function model() {
  (cd model; plantuml state.puml)
}

function listen() {
  (cd model; watch -n 1 plantuml *.puml)
}

function save() {
  if [ -z "$1" ]; then
    err "Usage: save \"did something neat>\""
    return; 
  fi
  git add .
  git commit -m "\"$@\""
  git push
}

function stub() {
  . scripts/stub.sh
}

function test() {
  stub model/site.stub test
}

function retest() {
  rm -rf test
  stub model/site.stub test
}

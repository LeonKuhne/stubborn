#!/bin/bash
title "stubborn"
debug "website generator"
help .cd | indent

function stub() {
  . scripts/stub.sh
}

function visit() {
  if [ -z "$1" ]; then
    err "usage: visit <project-dir>"; return
  fi
  (cd $1; npm run preview -- --open)
}

function run() {
  stub "model/$1/site.stub" test
  visit
}

function test() {
  stub model/orbb/site.stub test
}

function retest() {
  rm -rf test
  stub model/orbb/site.stub test
}

function listen() {
  file="models/$1/site.stub"
  if [ -z "$1" ]; then
    err "usage: listen <model-name>"; return
  elif [ ! -f "$file" ]; then
    err "stub file not found: $file"; return
  fi
  loop ./scripts/stub.sh "$file" "$file" "$1"
}


function relisten() {
  file="models/$1/site.stub"
  if [ -z "$1" ]; then
    err "usage: listen <model-name>"; return
  elif [ ! -f "$file" ]; then
    err "stub file not found: $file"; return
  fi
  loop ./scripts/restub.sh "$file" "$file" "$1"
}

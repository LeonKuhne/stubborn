#!/bin/bash
title "stubborn"
debug "website generator"
help .cd | indent

function model() {
  for file in "model/**/*.puml"; do
    plantuml $file
  done
  info "done"
}

function listen() {
  for file in "model/**/*.puml"; do
    watch -n 1 plantuml $file
  done 
  info "done"
}

function stub() {
  . scripts/stub.sh
}

function test() {
  stub model/orbb/site.stub test
}

function retest() {
  rm -rf test
  stub model/orbb/site.stub test
}
